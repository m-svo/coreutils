#!/bin/sh

: ${MKDIR=mkdir}

# TMPDIR should be an absolute dir for this test.
# FIXME: enforce it
: ${TMPDIR=/tmp}

if test "$VERBOSE" = yes; then
  set -x
  $MKDIR --version
fi

temp_dir=$TMPDIR/t-mkdir.$$
tmp=$temp_dir/a/b/c
rm -rf $temp_dir

$MKDIR --parents $tmp || fail=1

test -d $tmp || fail=1

rm -rf $temp_dir

exit $fail
