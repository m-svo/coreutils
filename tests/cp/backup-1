#!/bin/sh

: ${CP=cp}

suffix=.b
tmp=b1.$$
tmp_backup="$tmp$suffix"
temp_files="$tmp $tmp_backup"
rm -f $temp_files

fail=0
echo test > $tmp || fail=1

$CP --force --backup --version-control=simple --suffix=$suffix $tmp $tmp \
  || fail=1

test -f $tmp || fail=1
test -f $tmp_backup || fail=1
cmp $tmp $tmp_backup > /dev/null

rm -f $temp_files

exit $fail
