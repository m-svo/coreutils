#!/bin/sh
# Make sure touch works on fifos without hanging.

if test "$VERBOSE" = yes; then
  set -x
  touch --version
fi

framework_failure=0

tmp=fifo-$$
rm -rf $tmp
mkfifo $tmp || framework_failure=1

if test $framework_failure = 1; then
  echo 'failure in testing framework'
  exit 1
fi

fail=0

touch $tmp || fail=1
rm -rf $tmp

exit $fail
