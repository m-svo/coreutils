if ! getfacl --version 2> /dev/null 1>&2 || \
   ! setfacl --version 2> /dev/null 1>&2 ; then
  cat <<EOF 1>&2
**************************************
This test requires getfacl and setfacl.
**************************************
EOF
  (exit 77); exit 77
fi

if ! grep '^bin:' /etc/passwd 2> /dev/null 1>&2 ; then
  cat <<EOF 1>&2
**************************************
This test requires a local user named bin.
**************************************
EOF
  (exit 77); exit 77
fi
