getfacl --version < /dev/null 2> /dev/null 1>&2 \
  && setfacl --version < /dev/null 2> /dev/null 1>&2 || {
  cat <<EOF 1>&2
**************************************
$0: This test requires getfacl and setfacl.
**************************************
EOF
  (exit 77); exit 77
}

id -u bin 2> /dev/null 1>&2 || {
  cat <<EOF 1>&2
**************************************
$0: This test requires a local user named bin.
**************************************
EOF
  (exit 77); exit 77
}
