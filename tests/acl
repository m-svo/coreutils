getfacl --version < /dev/null > /dev/null 2>&1 \
  && setfacl --version < /dev/null > /dev/null 2>&1 || {
  cat <<EOF 1>&2
**************************************
$0: This test requires getfacl and setfacl.
**************************************
EOF
  (exit 77); exit 77
}

id -u bin > /dev/null 2>&1 || {
  cat <<EOF 1>&2
**************************************
$0: This test requires a local user named bin.
**************************************
EOF
  (exit 77); exit 77
}
