LINGUAS:
  sort -u ../[fst]u/po/LINGUAS > po/LINGUAS

go cu
cd po
for i in f s t; do
  echo $i:
  xu=${i}u
  for j in $(cat ../../$xu/po/LINGUAS); do
    echo "  $j"
    msgmerge -o k ../../$xu/po/$j.po $j.po && mv k $j.po
  done
done

go cu; cd po; export xu=tu j=zh_TW
go cu; cd po; export xu=su j=ru
go cu; cd po; export xu=fu j=zh_TW
msgmerge -o k ../../$xu/po/$j.po $j.po && mv k $j.po
