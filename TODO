Sat 2002-08-03 15:57:50 +0200

go cu
cd po
for i in f s t; do
  echo $i:
  xu=${i}u
  for j in $(cat ../../$xu/po/LINGUAS); do
    echo "  $j"
    msgmerge -o k ../../$xu/po/$j.po $j.po && mv k $j.po
  done
done
